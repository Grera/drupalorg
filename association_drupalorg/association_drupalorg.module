    'donate' => array(
      'title' => 'Donating to the Drupal Association',
      'access arguments' => array('access content'),
      'page callback' => 'theme',
      'page arguments' => array('association_drupalorg_donate_page'),
      'type' => MENU_CALLBACK,
    ),
