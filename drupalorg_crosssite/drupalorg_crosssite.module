        // All are exact paths and so theme('links') will make them gain active
        // classes when on the projects site. Therefore no need for #active.
        'home'         => array('href' => 'download', 'title' => t('Download & Extend Home'), '#site' => 'main'),
        'core'         => array('href' => 'node/3060', 'title' => t('Drupal Core'), '#active' => drupalorg_crosssite_in_breadcrumb('node/3060', $vars), '#site' => 'main'),
        'modules'      => array('href' => 'project/modules', 'title' => t('Modules'), '#site' => 'main', '#active' => drupalorg_crosssite_in_breadcrumb('project/modules', $vars)),
