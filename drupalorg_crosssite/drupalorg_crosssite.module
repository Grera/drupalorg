    // Just on the main website.
    case 'druplicon':
      $nav_content_links = array(
        'home'     => array('href' => '??', 'title' => t('Druplicon Home'), '#site' => 'main'),
        'about'    => array('href' => 'druplicon', 'title' => t('About Druplicon'), '#site' => 'main'),
